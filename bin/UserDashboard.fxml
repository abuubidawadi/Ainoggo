<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UserDashboardController"
            stylesheets="@dashboard.css">

    <!-- Header -->
    <AnchorPane prefHeight="80.0" prefWidth="1000.0" styleClass="header">
        <children>
            <ImageView fitHeight="60" fitWidth="100" layoutX="30" layoutY="10" preserveRatio="true">
                <image><Image url="@images/logo_black_icon.png"/></image>
            </ImageView>

            <Text layoutX="115" layoutY="52" text="Ainoggo">
                <font><Font size="30"/></font>
            </Text>

            <TextField fx:id="searchField" layoutX="360" layoutY="22"
                       prefHeight="36" prefWidth="320"
                       promptText="Search lawyer by name..." />
            <Button layoutX="690" layoutY="22" prefHeight="36" prefWidth="90"
                    text="Search" onAction="#searchLawyer"/>

            <Button layoutX="870" layoutY="22" prefHeight="36" prefWidth="100"
                    text="My Profile" onAction="#showProfile"/>
        </children>
    </AnchorPane>

    <!-- Scroll list -->
    <ScrollPane layoutY="80" prefHeight="570" prefWidth="1000" fitToWidth="true">
        <content>
            <VBox fx:id="lawyerListBox" spacing="15" styleClass="contentBox"/>
        </content>
    </ScrollPane>

</AnchorPane>
